<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorWhite"
    tools:context="com.codingspider.jantatransport.janttrans.nav.AboutUs">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/tata"/>

    <TextView
        android:id="@+id/matter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:lineSpacingExtra="8sp"
        android:text="Janatha Transport is India's pioneer Web and App Based Rood Transporter platform that connects users with a network of thousands of Truck Transport drivers for quick and prompt goods delivery solution in hubli"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/moto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/matter"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="8sp"
        android:text="Janatha Transport try to support our customers for their customiized requirements"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />



    <LinearLayout
        android:id="@+id/lay1"
        android:layout_below="@+id/moto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/moto"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="8sp"
            android:text="CALL US :"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phone1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/moto"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="8sp"
            android:text="+918884130000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>

</LinearLayout>
    <LinearLayout
        android:layout_below="@+id/lay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/phone2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moto"
        android:lineSpacingExtra="8sp"
        android:text="+918884130000"
        android:layout_marginLeft="80dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

    </LinearLayout>


</RelativeLayout>
